{
  "name": "chat-app-encryption-tests",
  "version": "1.0.0",
  "description": "End-to-end encryption tests for chat application",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest __tests__/E2EEncryptionIntegrationTest.js",
    "test:e2e:verbose": "jest __tests__/E2EEncryptionIntegrationTest.js --verbose",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "express": "^4.18.2",
    "libsodium-wrappers": "^0.7.15",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "chat-frontend/src/**/*.{js,ts}",
      "chat-backend/src/**/*.js",
      "!**/node_modules/**"
    ]
  }
}
